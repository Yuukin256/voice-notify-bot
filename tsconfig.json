{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["ESNext"],
    "baseUrl": "./src/"
  },
  "include": ["src/**/*"]
}
