{
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": ["ESNext"],
    "baseUrl": "./src/",
    "paths": {
      "#/*": ["*"]
    }
  },
  "include": ["src/*.ts"]
}
