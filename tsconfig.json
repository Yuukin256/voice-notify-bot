{
	"compilerOptions": {
		"outDir": "./dist",
		"moduleResolution": "Node",
		"module": "es6",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"lib": ["ESNext", "DOM"]
	},
	"include": ["src/*.ts"]
}
